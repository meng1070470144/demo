html,
body {
    font-size: 16px;
}

.mui-page-content {
    margin-top: 50px;
}

#description {
    height: 150px;
}

.form-group {
    position: relative;
    margin-bottom: 15px;
    padding: 4px 8px;
    border: 0;
    background-color: #fff
}

.form-group:before {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc
}

.form-group:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc
}

.form-row {
    height: 45px;
    clear: left;
    overflow: hidden;
    padding: 10px 8px;
    position: relative;
}

.form-row:last-child:after,
.form-row:last-child:before,
.form-row:after,
.form-row:before {
    height: 0
}

.form-row:after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 5px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #c8c7cc
}

.form-row-left {
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    line-height: 1.1;
    float: left;
    width: 35%;
    padding: 0;
    color: #000000;
}

.form-row-right {
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    line-height: 1.1;
    float: right;
    width: 65%;
    margin: 0;
    padding: 0;
    border: 0;
    color: #007AFF;
}

.attachment {
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    font-size: 16px;
    line-height: 1.1;
    margin: 10px 30px;
    padding: 0;
    border: 0;
    color: #007AFF;
}
